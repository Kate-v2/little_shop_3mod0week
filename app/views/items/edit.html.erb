<main>
  <h2>Edit Item</h2>
  <%= form_for @item do |f| %>
      <p><%= f.label :name, "Item Name" %>
      <%= f.text_field :name %></p>
      <p><%= f.label :price, "Price" %>
      <%= f.number_field :price %></p>
      <p><%= f.label :description %>
      <%= f.text_area :description%></p>
      <p><%= f.label :inventory %>
      <%= f.number_field :inventory %></p>
      <p><%= f.submit  %></p>
  <%end%>
</main>
