
<div class='container' id='orders-collection'>
  <% @orders.each do |order| %>

    <span class='card order' id='order-<%= order.id %>' >


      <% if @user_experience %>
        <h3><%= link_to "Order: #{order.id}", profile_order_path(order) %>
        </h3>
      <% elsif @merch_experience %>
        <h3><%= link_to "Order: #{order.id}", order_path(order) %>
      <% else %>
        <h3>Order: <%= order.id %></h3>
      <% end %>


      <h4>Status: <%= order.status.capitalize %>
      </h4>

      <% if order.status == 'pending' %>
        <%= link_to "Cancel Order",
            cancel_order_path( id: order.id, previous: request.path )
        %>
      <% end %>

      <h5 class='item-date'>Ordered: <%= order.created_at %>
      </h5>
      <h5 class='item-date'>Updated: <%= order.updated_at %>
      </h5>

      <% if @user_experience %>
        <h4><%= order.item_count %> items
        </h4>
        <h4>Total: <%= number_to_currency(order.total_cost) %>
        </h4>
      <% end %>

      <%= render partial: 'components/orders/order_items', locals: { order: order } %>

    </span>
  <%end%>
</div>
