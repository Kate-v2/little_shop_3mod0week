
<div class='container order-items'>

  <% @total = 0 %>
  <% @count = 0 %>

  <% if @merch_experience || @merch_order_experience %>

    <% order_items = order.order_items.with_subtotals %>
    <% order_items.each do |oitem| %>
      <span class='order-item'>

        <% item = oitem.item %>
        <% if item.user_id == current_user.id %>
          <!-- Only Need this on show ? -->
          <% @count += 1 %>
          <% @total += oitem.subtotal %>

          <%= render partial: 'components/items/item_title',           locals: {oitem: oitem, item: item } %>
          <%= render partial: 'components/orders/merchant_order_item', locals: {oitem: oitem, item: item, order: order } %>
          <%= render partial: 'components/orders/fulfillment',         locals: {oitem: oitem, item: item } %>

        <% end %>
      </span>
    <% end %>

    <h3>Checkout Cost: <%= number_to_currency(@total) %></h3>
    <h3>Item Count: <%= @count %></h3>
  <% end %>


  <% if @user_order_experience %>

    <h3>Checkout Cost: <%= number_to_currency(order.total_cost) %></h3>
    <h3>Item Count: <%=    order.item_count                     %></h3>

    <% order_items = order.order_items.with_subtotals %>
    <% order_items.each do |oitem| %>
    <span class='order-item'>
      <% item = oitem.item %>
      <% @count += oitem.quantity %>
      <% @total += oitem.subtotal %>

      <%= render partial: 'components/items/item_title',       locals: {oitem: oitem, item: item } %>
      <%= render partial: 'components/orders/user_order_item', locals: {item: item, oitem: oitem, order: order } %>
    </span>
    <% end %>
  <% end %>



</div>
