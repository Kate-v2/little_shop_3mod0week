
<div class='container' id='items-collection'>
  <% @items.each do |item| %>
    <div class='card item' id="item-<%= item.id %>">

      <%= render partial: 'components/items/item_title', locals: {item: item} %>

      <p>Seller: <%= item.user.name %></p>
      <p><%= number_to_currency(item.price) %></p>
      <% if current_page?(item_path(item)) %>
        <p>Description: <%= item.description %></p>
        <p>Inventory: <%= item.inventory %></p>
      <%end %>

      <%= render partial: 'components/add_item', :locals => {item: item} %>

      <%if current_page?(cart_path) %>
        <p><%= link_to "Remove Item From Cart", delete_item_path(delete_item: 0, item_id: item.id) %></p>
        <p>Item total: <%= number_to_currency(@item_sum[item.id.to_s]) %></p>
      <%end %>

    </div>
  <%end %>
</div>
