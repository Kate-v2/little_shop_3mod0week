
<div class='container order-items'>
  <!-- Display the order items if -->
  <% if @merch_experience %>
    <% order.order_items.with_subtotals.each do |oitem| %>

      <% if oitem.item.user_id == current_user.id %>

        < %= link_to item_path(oitem.item do)%>
          <span>
            <h3><%= oitem.item.name %></h3>
            <% oitem.item.image ? img = oitem.item.image : img = "https://smhttp-ssl-50970.nexcesscdn.net/media/catalog/product/cache/1/image/9df78eab33525d08d6e5fb8d27136e95/placeholder/default/no_image_available_3.jpg" %>
            <%= image_tag img %>
          </span>
        < % end %>
      <% end %>

      <h4>Current: <%= oitem.item.price %></h4>
      <h4>Purchased: <%= oitem.purchase_price %></h4>
      <h4>Qty: <%= oitem.quantity %></h4>
      <h5>Sum: <%= oitem.subtotal %>

      <% if oitem.quantity <= oitem.item.inventory %>
        < %= link_to 'Fulfill', fulfill_order_path %>
        <!-- ??? Is a merchant able to cancel - it would affect the order  -->
        <!-- < %= link_to 'Cancel', cancel_order_path %> -->
      <% else %>
        <h3 id='cannot-fulfill'>Sorry, you don't have enough inventory to fulfill this order"</h3>
      <% end %>


    <% end %>
  <% end %>






</div>
