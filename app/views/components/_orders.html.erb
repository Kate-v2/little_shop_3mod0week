<div class='container' id='orders-collection'>
  <% @orders.each do |order| %>
    <span class='card order'>
      <h3><%= link_to "#{order.id}", profile_order_path(order) %></h3>
      <h4>Status: <%=  order.status     %></h4>
      <h5 class='item-date'>Ordered: <%= order.created_at %></h5>
      <h5 class='item-date'>Updated: <%= order.updated_at %></h5>
      <h5><%= %> items ordered</h5>
    </span>
  <%end%>
</div>
